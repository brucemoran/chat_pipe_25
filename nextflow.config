
docker {
    enabled = true
    // Tell Nextflow to use Docker for process execution        
    runOptions = '--pull=always --rm'
}

process {
    withName:DOWNLOAD_REFERENCE {
        container = 'curlimages/curl:latest'
    }
    withName:FASTP_QC {
        container = 'quay.io/biocontainers/fastp:latest'
    }
    withName:ALIGN_BWA {
        container = 'quay.io/biocontainers/bwa:latest'
    }
    withName:MARKDUP_BQSR {
        container = 'broadinstitute/gatk:latest'
    }
    withName:MUTECT2_CALL {
        container = 'broadinstitute/gatk:latest'
    }
    withName:PCGR_ANNOTATE {
        container = 'sigven/pcgr:latest'
    }
    executor = 'local'
}
