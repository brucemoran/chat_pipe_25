
docker {
    enabled = true
    // Tell Nextflow to use Docker for process execution        
    runOptions = '--rm'          // Remove container after running
    runOptions = '--pull=always'
}

process {
    withName:DOWNLOAD_REFERENCE {
        container = 'curlimages/curl:latest'
    }
    withName:FASTP_QC {
        container = 'quay.io/biocontainers/fastp:0.24.0--heae3180_1'
    }
    withName:ALIGN_BWA {
        container = 'quay.io/biocontainers/bwa:0.7.3a--h577a1d6_10'
    }
    withName:MARKDUP_BQSR {
        container = 'quay.io/biocontainers/gatk4:4.6.1.0--py310hdfd78af_0 '
    }
    withName:MUTECT2_CALL {
        container = 'quay.io/biocontainers/gatk4:4.6.1.0--py310hdfd78af_0 '
    }
    withName:PCGR_ANNOTATE {
        container = 'sigven/pcgr:2.1.2.9001'
    }
    executor = 'local'
}
